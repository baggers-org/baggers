{
  "extends": "@baggers/tsconfig/remix.json",
  "include": [
    "remix.env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "../../packages/ui-util/src/lib/format-currency.ts"
  ],
  "compilerOptions": {
    "paths": {
      "~/*": ["./app/*"]
    },
    "noEmit": true,
    "baseUrl": ".",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "strict": true,
    "target": "ES2019",
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "moduleResolution": "node"
  }
}
