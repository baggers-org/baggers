{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/api/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/node:webpack",
      "dependsOn": [
        "type-util:build"
      ],
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/apps/api",
        "main": "apps/api/src/main.ts",
        "generatePackageJson": true,
        "tsConfig": "apps/api/tsconfig.app.json",
        "tsPlugins": [
          {
            "name": "@nestjs/graphql/plugin",
            "options": {
              "introspectComments": true,
              "typeFileNameSuffix": [
                ".input.ts",
                ".args.ts",
                ".entity.ts",
                ".model.ts"
              ]
            }
          }
        ]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false
        }
      }
    },
    "docker": {
      "executor": "@nx-tools/nx-docker:build",
      "options": {
        "push": true,
        "file": "apps/api/Dockerfile",
        "tags": [
          "eu.gcr.io/baggers-367917/api:latest"
        ],
        "cache-from": [
          "type=gha"
        ],
        "cache-to": [
          "type=gha,mode=max"
        ]
      }
    },
    "docker-local": {
      "executor": "@nx-tools/nx-docker:build",
      "options": {
        "push": true,
        "file": "apps/api/Dockerfile",
        "tags": [
          "eu.gcr.io/baggers-367917/api:latest"
        ]
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "echo 'error no --configuration=production flag passed'"
      },
      "configurations": {
        "production": {
          "command": "kubectl rollout restart deployment api && kubectl rollout status deployment api"
        }
      }
    },
    "dev": {
      "executor": "@nrwl/node:node",
      "options": {
        "buildTarget": "api:build"
      },
      "configurations": {
        "production": {
          "buildTarget": "api:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "apps/api/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "coverage/apps/api"
      ],
      "options": {
        "jestConfig": "apps/api/jest.config.ts",
        "passWithNoTests": true,
        "runInBand": true
      }
    },
    "type-check": {
      "executor": "./tools/executors/ts-check:ts-check"
    }
  },
  "tags": []
}