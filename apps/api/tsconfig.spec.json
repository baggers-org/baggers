{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "node"],
    "strict": false,
    "useUnknownInCatchVariables": false,
    "paths": {
      "~/*": ["./src/*"],
      "~test-sdk": ["tests/test-sdk.ts"]
    }
  },
  "include": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.d.ts",
    "tests/global.d.ts",
    "tests/**/*.ts",
    "tests/suites/**/.ts"
  ]
}
