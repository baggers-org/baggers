{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/<%= name %>/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/node:webpack",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/apps/<%= name %>",
        "main": "apps/<%= name %>/src/main.ts",
        "tsConfig": "apps/<%= name %>/tsconfig.app.json",
        "generatePackageJson": true
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false
        }
      }
    },
    "serve": {
      "executor": "@nrwl/node:node",
      "options": {
        "buildTarget": "<%= name %>:build"
      },
      "configurations": {
        "production": {
          "buildTarget": "<%= name %>:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "apps/<%= name %>/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "coverage/apps/<%= name %>"
      ],
      "options": {
        "jestConfig": "apps/<%= name %>/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "docker": {
      "executor": "@nx-tools/nx-docker:build",
      "options": {
        "push": true,
        "file": "apps/<%= name %>/Dockerfile",
        "tags": [
          "eu.gcr.io/baggers-367917/<%= name %>:latest"
        ],
        "cache-from": [
          "type=gha"
        ],
        "cache-to": [
          "type=gha,mode=max"
        ]
      }
    }
  },
  "tags": []
}