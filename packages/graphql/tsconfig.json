{
  "compilerOptions": {
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "./src",
    "rootDir": "src",
    "outDir": "build",
    "target": "ES2016",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "exclude": ["node_modules", "**/*.test.ts"],
  "include": ["src"]
}
