{
    "compilerOptions": {
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "declaration": true,
      "preserveConstEnums": true,
      "esModuleInterop": true,
      "module": "CommonJS",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "outDir": "build",
      "target": "ES2016"
    },
    "exclude": ["node_modules"],
    "include": ["src"]
  }
  
