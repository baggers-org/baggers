{
	"compilerOptions": {
	  "baseUrl": "./src",
	  "paths": {
	    "@/*": [
	      "./*"
	    ]
	  },
	  "incremental": true,
	  "target": "esnext",
	  "lib": [
	    "dom",
	    "dom.iterable",
	    "esnext"
	  ],
	  "allowJs": true,
	  "skipLibCheck": true,
	  "strict": true,
	  "strictPropertyInitialization": false,
	  "forceConsistentCasingInFileNames": true,
	  "noImplicitAny": false,
	  "esModuleInterop": true,
	  "moduleResolution": "node",
	  "resolveJsonModule": true,
	  "emitDecoratorMetadata": true,
	  "experimentalDecorators": true,
	  "isolatedModules": true,
	  "module": "commonjs",
	  "rootDir": "src",
	  "outDir": "build",
	  "types": ["node", "jest"]
	},
	"exclude": [
	  "node_modules",
	],
	"include": [
		"src/**/*.ts"
	]
      }
      