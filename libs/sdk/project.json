{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/sdk/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/libs/graphql-types/src/generated/index.ts"],
      "dependsOn": ["^build"],
      "options": {
        "command": "graphql-codegen --config libs/sdk/codegen.yml"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/sdk/**/*.ts"]
      }
    }
  },
  "tags": []
}
