{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/graphql-types/src",
  "projectType": "library",
  "targets": {
    "prebuild": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/src/graphql.document.gql"],
      "options": {
        "command": "node libs/graphql-types/scripts/mergeGraphQLDocuments.js"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/src/generated/index.ts"],
      "dependsOn": ["prebuild"],
      "options": {
        "command": "graphql-codegen --config libs/graphql-types/codegen.yml"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/graphql-types/**/*.ts"]
      }
    },
    "type-check": {
      "executor": "./tools/executors/ts-check:ts-check"
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/libs/sdk"],
      "options": {
        "jestConfig": "libs/graphql-types/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
